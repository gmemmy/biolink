{
  "compilerOptions": {
    "composite": true,
    "rootDir": ".",
    "baseUrl": ".",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "packages/*": ["./packages/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
} 