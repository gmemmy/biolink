{
  "name": "@biolink/react-native-biolink",
  "version": "1.0.0",
  "description": "React Native biometric authentication and secure storage library using Nitro modules for bridge-free native communication",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc -b",
    "clean": "rm -rf dist nitrogen/generated",
    "codegen": "nitro-codegen",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "jest",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "ci": "npm run build && npm run check-format && npm run test"
  },
  "keywords": [
    "react-native",
    "nitro",
    "biolink",
    "biometric",
    "authentication",
    "keychain",
    "keystore",
    "secure-storage",
    "cryptography",
    "signing",
    "ios",
    "android",
    "typescript"
  ],
  "dependencies": {
    "react-native-logs": "^5.0.0"
  },
  "devDependencies": {
    "nitro-codegen": "^0.26.3",
    "@types/jest": "^29.0.0",
    "@types/react": "^18.0.0",
    "@types/react-native": "^0.72.0",
    "eslint": "^8.57.1",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.3.0",
    "prettier": "^3.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.74.0",
    "react-native-nitro-modules": "^0.26.3"
  },
  "files": [
    "dist",
    "ios",
    "android",
    "nitrogen",
    "*.podspec",
    "react-native.config.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/biolink/react-native-biolink.git"
  },
  "homepage": "https://github.com/biolink/react-native-biolink#readme",
  "bugs": {
    "url": "https://github.com/biolink/react-native-biolink/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Biolink Team",
    "email": "team@biolink.dev"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
